    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="192x192" href="{{ absolute_url(asset('assets/images/fav/android-icon-192x192.png')) }}" />
    <link rel="icon" type="image/png" sizes="32x32" href="{{ absolute_url(asset('assets/images/fav/favicon-32x32.png')) }}" />
