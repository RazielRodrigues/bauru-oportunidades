    {% block stylesheets %}

    {% endblock %}
  </head>
  <body class="d-flex flex-column min-vh-100 bg-dark text-light">
    <!-- Navbar -->
    <header class="sticky-top">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand fw-bold" href="{{ path('app_index') }}">Bauru Jobs</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"><span class="navbar-toggler-icon"></span></button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_index') }}"><i class="fas fa-briefcase me-1"></i> Vagas</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_home') }}"><i class="fas fa-plus-circle me-1"></i> Cadastrar Vaga</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('app_about') }}"><i class="fas fa-info-circle me-1"></i> Sobre</a>
              </li>
              {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"><i class="fas fa-user-circle me-1"></i> {{ app.user.username }}</a>
